@{
    ViewData["Title"] = "FAQs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Section Ends Here -->

<section class="inner-banner bg_img"
         style="background: url('/images/66868cfc051ae1720093948.jpg') center">
    <div class="container">
        <div class="inner-banner-content">
            <h2 class="title">FAQs</h2>
        </div>
    </div>
</section>

<section class="faq-section padding-top padding-bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="section-header text-center">
                    <h2 class="title">Frequently Asked Questions</h2>
                    <p>
                        Here are some of the most common questions we receive from our customers. If you have any other questions, feel free to contact us.
                    </p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="faq-wrapper">
                    <div class="faq-item">
                        <div class="faq-title">
                            <span class="icon"></span>
                            <h5 class="title">How can I book a bus ticket online?</h5>
                        </div>
                        <div class="faq-content">
                            <p>
                                Booking a bus ticket is easy. Simply visit our booking page, choose your route, select your seat, and complete the payment process.
                            </p>
                        </div>
                    </div>
                    <div class="faq-item">
                        <div class="faq-title">
                            <span class="icon"></span>
                            <h5 class="title">What are the accepted payment methods?</h5>
                        </div>
                        <div class="faq-content">
                            <p>
                                We accept various payment options including credit/debit cards, PayPal, and direct bank transfers for your convenience.
                            </p>
                        </div>
                    </div>
                    <div class="faq-item">
                        <div class="faq-title">
                            <span class="icon"></span>
                            <h5 class="title">Can I modify or cancel my reservation?</h5>
                        </div>
                        <div class="faq-content">
                            <p>
                                Yes, you can modify or cancel your booking up to 24 hours before the departure time. Please review our cancellation policy for more details.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="faq-wrapper">
                    <div class="faq-item">
                        <div class="faq-title">
                            <span class="icon"></span>
                            <h5 class="title">How do I receive updates if my bus is delayed?</h5>
                        </div>
                        <div class="faq-content">
                            <p>
                                If your bus is delayed, we will notify you via SMS or email with regular updates to ensure you are well-informed.
                            </p>
                        </div>
                    </div>
                    <div class="faq-item">
                        <div class="faq-title">
                            <span class="icon"></span>
                            <h5 class="title">Are there any discounts for children or seniors?</h5>
                        </div>
                        <div class="faq-content">
                            <p>
                                Yes, we offer special discounts for children and senior citizens. Discounts are applied based on age and will be reflected during checkout.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

